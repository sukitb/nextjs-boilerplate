    "jsdom": "^24.1.0",
    "postcss": "^8",
    "prettier": "3.3.2",
    "storybook": "^8.1.10",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^1.6.0",
    "vitest-fail-on-console": "^0.7.0"
